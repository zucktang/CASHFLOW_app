<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/save_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/save_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/save_image_view"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.ExpandedMenu.Item"
        android:textColor="#000000"
        android:textColorHighlight="#F10000" />

    <TextView
        android:id="@+id/save_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_title_text_view"
        android:layout_alignBottom="@+id/save_image_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/save_image_view"
        android:layout_toRightOf="@+id/save_image_view"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#0C0C0C"
        android:textColorHighlight="#FF0202" />
</RelativeLayout>